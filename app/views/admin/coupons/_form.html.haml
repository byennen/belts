= simple_form_for [:admin, @coupon], class: 'form-horizontal' do |f|
  = f.error_notification
  .form-inputs
    = f.input :code, hint: "alphanumeric of length 4 to 20, autogenerated if not given", required: false
    = f.input :frequency, label: "Uses per coupon"
    = f.input :discount_type, as: :select, collection: Coupon::COUPON_TYPES, include_blank: false, label: "Discount type"
    = f.input :discount_percentage, label: "Discount %"
    = f.input :discount, label: "Discount in USD"
    = f.input :start_date, label: "Applicable from"
    = f.input :end_date, label: "Expires on"
    = f.input :status, label: "Enabled?"
  .form-actions
    = f.submit :save, class: 'btn btn-inverse'