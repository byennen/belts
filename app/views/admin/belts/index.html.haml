%h3 Belts
.row
  .span12
    %table.table.table-condensed
      %thead
        %tr
          %th Name
          %th Style
          %th Hex color
          %th Pattern
          %th Image
          %th
          %th
      %tbody
        - @belts.each do |belt|
          %tr
            %td= belt.name
            %td= belt.style.name
            %td= belt.hex_color
            %td= image_tag belt.belt_pattern_image.url if belt.belt_pattern_image?
            %td= image_tag belt.image.url(:medium) if belt.image?
            %td= link_to 'Edit', edit_admin_belt_path(belt)
            %td= link_to 'Destroy', admin_belt_path(belt), :method => :delete, :data => { :confirm => 'Are you sure?' }

    .form-actions
      = link_to 'New Belt', new_admin_belt_path, class: 'btn btn-inverse'
