.row
  .span12
    %p
      %strong Order ID:
      = @order.id
    %p
      %strong Name:
      = @order.name
    %p
      %strong Address:
      %br
      = @order.address_1
      - if @order.address_2.present?
        %br
        = @order.address_2
      %br
      = @order.city
      %br
      = @order.state
      %br
      = @order.zip_code
    %p
      %strong Email:
      = mail_to @order.email
    %p
      %strong Total:
      = @order.complete_order_price(@order.price_cents, @order.price_currency)
    %p
      %strong Cause:
      = @order.cause

.row
  .span12
    %p
      %strong Order:
      - @order.line_items.each do |line_item|
        .span7
          %p
            - if line_item.quantity > 1
              = line_item.quantity
              &times;
            = line_item.buckle.style.name
            = line_item.buckle.name
            = Buckle
            = ' + '
            = line_item.belt.name
            = Belt
          / quantity
        .span2
          %p.rate
            $
            = line_item.total_price

.row
  .span12
    %h4 Coupon
    - if @order.coupon_code.blank?
      %p (not used)
    - else
      %p= "$ #{@order.discount} coupon code - #{@order.coupon_code}"
.row
  .span12
    %h4 Total
    %p= @order.complete_order_price(@order.price_cents, @order.price_currency)
