            %img.active-buckle{:alt => "Image", :src => @default_buckle_url}/
            %img#loading_image{:src => "assets/loading.gif", :style => "display: none;"}
        / belt-assets
      / span8
      .span4
        .pallete-box
          %ul#type-titles.hides
            %li#i-1
