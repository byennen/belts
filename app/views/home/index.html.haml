            %p Choose Belt Color:
            %div
              #icolor.icolorC
              / icolor
            / colors
          / color-box
          .clearfix
          / clearfix
          .color-box
            %p Choose Buckle Color:
            %div
              #icolor2.icolorC
              / icolor
            / colors
          / color-box
          .clearfix
          / clearfix
          .randomize
            %a Feeling Adventurous? RANDOMIZE
          / randomize
          .clearfix
          / clearfix
          .color-box
            %p Recent Color Schemes:
            #icolor3.icolorC
            %a{:id => "add-to-cart"}
              %button.btn.btn2{:name => "btn"}
                %i
                  %img{:alt => "Image", :src => "assets/cart-icon.png"}/
                ADD TO CART
          / color-box
          .clearfix
          / clearfix
    / container
  / row-fluid
  .clearfix
  / clearfix

