
.row-fluid.show-cause
  .container
    .span5
      .slogan
        .slogan-img
          %img{:alt => "Image", :height => "300", :src => @cause.image.url(:large), :width => "400"}/
        .select-one
          %img.active-belt{:alt => "Image", :src => @belt_url}/
          %img.active-buckle{:alt => "Image", :src => @buckle_url}/
        / select-one
      / slogan
