  if type is "skinny"
    belt_colors = SKINNY_BELTS
    buckle_colors = SKINNY_BUCKLES
  else if type is "classic"
    belt_colors = CLASSIC_BELTS
    buckle_colors = CLASSIC_BUCKLES
  init_tile_table(belt_colors, "1")
  init_tile_table(buckle_colors, "2")
