rgb2hex = (rgb) ->
  if rgb.indexOf("#") is -1 && rgb.indexOf("cloudinary") is -1
    hex = (x) ->
      ("0" + parseInt(x).toString(16)).slice -2
    rgb = rgb.match(/^rgb\((\d+),\s*(\d+),\s*(\d+)\)$/)
    "#" + hex(rgb[1]) + hex(rgb[2]) + hex(rgb[3])
  else
    rgb

